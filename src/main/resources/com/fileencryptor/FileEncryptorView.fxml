<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.fileencryptor.FileEncryptorController"
      prefHeight="400.0" prefWidth="500.0"
      spacing="10" alignment="CENTER"
      style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="File Encryptor" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
    
    <!-- Description -->
    <Label text="Encrypt and decrypt your files securely using AES encryption" 
           wrapText="true" textAlignment="CENTER" style="-fx-font-size: 14;"/>
    
    <Separator prefWidth="200.0">
        <VBox.margin>
            <Insets top="10" bottom="10"/>
        </VBox.margin>
    </Separator>
    
    <!-- File selection -->
    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="filePathField" promptText="Select a file" HBox.hgrow="ALWAYS" editable="false"/>
        <Button text="Browse" onAction="#handleBrowseButton"/>
    </HBox>
    
    <!-- Password input -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="Secret Key:" minWidth="80"/>
        <PasswordField fx:id="secretKeyField" promptText="Enter your secret key" HBox.hgrow="ALWAYS"/>
    </HBox>
    
    <!-- Operation buttons -->
    <HBox spacing="20" alignment="CENTER">
        <Button text="Encrypt" onAction="#handleEncryptButton" 
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;" 
                prefWidth="120" prefHeight="30"/>
        <Button text="Decrypt" onAction="#handleDecryptButton"
                style="-fx-background-color: #2196F3; -fx-text-fill: white;" 
                prefWidth="120" prefHeight="30"/>
    </HBox>
    
    <Separator prefWidth="200.0">
        <VBox.margin>
            <Insets top="10" bottom="10"/>
        </VBox.margin>
    </Separator>
    
    <!-- Status information -->
    <Label fx:id="statusLabel" text="Ready" wrapText="true" textAlignment="CENTER"/>
    
    <!-- Progress indicator -->
    <ProgressBar fx:id="progressBar" progress="0.0" prefWidth="200"/>
    
    <!-- Version information -->
    <Label text="v1.0" style="-fx-font-size: 10;" alignment="CENTER_RIGHT" 
           VBox.vgrow="ALWAYS" maxWidth="Infinity"/>
           
</VBox>